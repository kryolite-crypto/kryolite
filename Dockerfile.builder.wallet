ARG GITHUB_REPOSITORY
FROM ghcr.io/${GITHUB_REPOSITORY}/builder:base

COPY shared shared
COPY node node

COPY wallet wallet

ARG RUNTIME
RUN dotnet publish wallet \
  -c Release \
  -p:PublishSingleFile=true -p:IncludeNativeLibrariesForSelfExtract=true \
  --self-contained --runtime="$RUNTIME" \
  -o /build
